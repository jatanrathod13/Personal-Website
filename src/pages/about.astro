---
import BaseLayout from '../layouts/BaseLayout.astro'
import { siteConfig } from '../config'

const pageTitle = `About | ${siteConfig.title}`
---

<BaseLayout title={pageTitle}>
  <div class="container mx-auto px-4 py-12">
    <section class="text-center mb-16">
      <h1 class="text-4xl font-bold mb-4">About Me</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        Data Engineer with 6 years of experience building AI-powered solutions
        for Fortune 500 companies and government agencies.
      </p>
    </section>
  </div>
</BaseLayout>