---
import { profileConfig, siteConfig } from '../config'
import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = `About | ${siteConfig.title}`
---

<BaseLayout title={pageTitle}>
  <div class="container max-w-5xl mx-auto px-4 py-16 space-y-24">
    <!-- Hero Section -->
    <section class="flex flex-col md:flex-row gap-12 items-center">
      <div class="md:w-1/3">
        <img 
          src={profileConfig.avatar} 
          alt={profileConfig.name} 
          class="rounded-full w-64 h-64 object-cover border-4 border-skin-accent shadow-xl mx-auto"
        />
      </div>
      <div class="md:w-2/3 space-y-6 text-center md:text-left">
        <h1 class="text-5xl font-bold text-skin-accent">
          Hi, I'm {profileConfig.name}
        </h1>
        <p class="text-2xl font-light text-skin-base leading-relaxed">
          {profileConfig.bio}
        </p>
        <div class="flex gap-4 justify-center md:justify-start">
          {profileConfig.links.map(link => (
            <a 
              href={link.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class={`text-3xl transition-transform hover:scale-110 ${link.color}`}
              aria-label={link.name}
            >
              {link.name === 'GitHub' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/></svg>
              )}
              {link.name === 'LinkedIn' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24"><path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77Z"/></svg>
              )}
              {link.name === 'Twitter' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24"><path fill="currentColor" d="M22.46 6c-.77.35-1.6.58-2.46.69c.88-.53 1.56-1.37 1.88-2.38c-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29c0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15c0 1.49.75 2.81 1.91 3.56c-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07a4.28 4.28 0 0 0 4 2.98a8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21C16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56c.84-.6 1.56-1.36 2.14-2.23Z"/></svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- About Me Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-skin-accent border-b-2 border-skin-accent pb-2">About Me</h2>
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p>
          I'm a Senior Data Engineer with a passion for building high-performance, scalable data solutions that power AI systems. With over 6 years of experience, I've worked with Fortune 500 companies and government agencies to transform their data infrastructure and unlock new insights.
        </p>
        <p>
          My expertise spans the full data engineering stack - from designing data architectures to implementing ETL pipelines, managing databases, and deploying machine learning models in production environments.
        </p>
        <p>
          I'm particularly interested in real-time data processing, stream analytics, and building scalable data platforms that enable data scientists and analysts to extract value from data efficiently.
        </p>
      </div>
    </section>

    <!-- Skills Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-skin-accent border-b-2 border-skin-accent pb-2">Skills</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {profileConfig.skills.map(skill => (
          <div class="bg-skin-card p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4">{skill.category}</h3>
            <div class="flex flex-wrap gap-2">
              {skill.items.map(item => (
                <span class="px-3 py-1 bg-skin-accent text-white rounded-full text-sm">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-skin-accent border-b-2 border-skin-accent pb-2">Professional Experience</h2>
      <div class="space-y-12">
        {profileConfig.experience.map(job => (
          <div class="relative pl-8 border-l-2 border-skin-accent">
            <div class="absolute w-4 h-4 bg-skin-accent rounded-full -left-[9px] top-1"></div>
            <div class="space-y-2">
              <h3 class="text-2xl font-bold">{job.title}</h3>
              <div class="flex flex-wrap justify-between items-center">
                <p class="text-xl font-medium">{job.company}</p>
                <p class="text-sm bg-skin-card px-3 py-1 rounded-full">{job.period}</p>
              </div>
              <p class="text-lg">{job.description}</p>
              <ul class="list-disc list-inside space-y-1 pl-4">
                {job.achievements?.map(achievement => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Education Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-skin-accent border-b-2 border-skin-accent pb-2">Education</h2>
      <div class="space-y-8">
        {profileConfig.education.map(edu => (
          <div class="relative pl-8 border-l-2 border-skin-accent">
            <div class="absolute w-4 h-4 bg-skin-accent rounded-full -left-[9px] top-1"></div>
            <div class="space-y-2">
              <h3 class="text-xl font-bold">{edu.degree}</h3>
              <p class="text-lg">{edu.school}</p>
              <p class="text-sm bg-skin-card px-3 py-1 rounded-full inline-block">{edu.period}</p>
              {edu.specialization && (
                <p class="text-md font-medium">Specialization: {edu.specialization}</p>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Certifications Section -->
    <section>
      <h2 class="text-3xl font-bold mb-8 text-skin-accent border-b-2 border-skin-accent pb-2">Certifications</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {profileConfig.certifications?.map(cert => (
          <div class="bg-skin-card p-6 rounded-lg shadow-md flex items-center gap-4">
            <div class="bg-skin-accent rounded-full p-3 text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 256 256"><path fill="currentColor" d="M248 128a56 56 0 0 1-56 56a8 8 0 0 1-8-8a8 8 0 0 1 8-8a40 40 0 0 0 0-80a8 8 0 0 1-8-8a8 8 0 0 1 8-8a56 56 0 0 1 56 56ZM56 72a8 8 0 0 0-8 8a8 8 0 0 0 8 8a40 40 0 0 1 0 80a8 8 0 0 0-8 8a8 8 0 0 0 8 8a56 56 0 0 0 0-112Zm72 112a56.06 56.06 0 0 1-56-56a8 8 0 0 1 16 0a40 40 0 0 0 80 0a8 8 0 0 1 16 0a56.06 56.06 0 0 1-56 56Zm0-112a56.06 56.06 0 0 1 56 56a8 8 0 0 1-16 0a40 40 0 0 0-80 0a8 8 0 0 1-16 0a56.06 56.06 0 0 1 56-56Z"/></svg>
            </div>
            <div>
              <h3 class="text-lg font-bold">{cert.name}</h3>
              <p class="text-sm">{cert.issuer} â€¢ {cert.date}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="bg-skin-card p-10 rounded-xl shadow-lg text-center">
      <h2 class="text-3xl font-bold mb-4">Let's Work Together</h2>
      <p class="text-lg mb-6 max-w-2xl mx-auto">
        I'm always open to discussing new projects, opportunities, and collaborations. If you're interested in working together, feel free to reach out!
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-skin-accent hover:bg-opacity-90 text-white font-bold py-3 px-8 rounded-full transition-all transform hover:scale-105"
      >
        Get in Touch
      </a>
    </section>
  </div>
</BaseLayout>

<style>
  .prose p {
    margin-bottom: 1.5rem;
  }
</style>