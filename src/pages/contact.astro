---
import BaseLayout from '../layouts/BaseLayout.astro'
import { siteConfig } from '../config'

const contactInfo = {
  email: 'jatan.rathod@example.com',
  location: 'United States',
  availability: 'Open to new opportunities',
  preferredContact: ['Email', 'LinkedIn', 'GitHub']
}

const pageTitle = `Contact | ${siteConfig.title}`
---

<BaseLayout title={pageTitle}>
  <!-- Hero Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 ai-gradient">Get in Touch</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          I'm always interested in hearing about new projects, opportunities, or just connecting with fellow tech enthusiasts.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto">
        <form class="space-y-6" id="contactForm">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700"
            ></textarea>
          </div>

          <div>
            <button
              type="submit"
              class="btn btn-primary w-full"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center ai-gradient">Other Ways to Connect</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Contact Details -->
          <div class="space-y-6">
            <div>
              <h3 class="text-xl font-semibold mb-4">Contact Information</h3>
              <ul class="space-y-4">
                <li class="flex items-center">
                  <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <a href={`mailto:${contactInfo.email}`} class="text-gray-600 dark:text-gray-300 hover:text-blue-500">
                    {contactInfo.email}
                  </a>
                </li>
                <li class="flex items-center">
                  <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="text-gray-600 dark:text-gray-300">{contactInfo.location}</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-6 h-6 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-600 dark:text-gray-300">{contactInfo.availability}</span>
                </li>
              </ul>
            </div>

            <div>
              <h3 class="text-xl font-semibold mb-4">Preferred Contact Methods</h3>
              <ul class="space-y-2">
                {contactInfo.preferredContact.map(method => (
                  <li class="flex items-center">
                    <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-600 dark:text-gray-300">{method}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>

          <!-- Social Links -->
          <div>
            <h3 class="text-xl font-semibold mb-4">Connect on Social Media</h3>
            <div class="space-y-4">
              {siteConfig.profile.links.map(link => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center p-4 bg-white dark:bg-gray-700 rounded-lg shadow-sm hover:shadow-md transition-shadow"
                >
                  <span class={`text-2xl mr-3 ${link.icon} ${link.color}`}></span>
                  <span class="text-gray-700 dark:text-gray-300">{link.name}</span>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center ai-gradient">Frequently Asked Questions</h2>
        
        <div class="space-y-6">
          <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <h3 class="text-lg font-semibold mb-2">What types of opportunities are you interested in?</h3>
            <p class="text-gray-600 dark:text-gray-300">
              I'm particularly interested in roles involving AI, data engineering, and automation. I have extensive experience with large-scale data systems and machine learning projects.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <h3 class="text-lg font-semibold mb-2">What is your preferred work arrangement?</h3>
            <p class="text-gray-600 dark:text-gray-300">
              I'm open to both remote and hybrid work arrangements. I have experience working effectively in distributed teams across different time zones.
            </p>
          </div>

          <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <h3 class="text-lg font-semibold mb-2">Do you provide consulting services?</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Yes, I offer consulting services for data engineering, AI implementation, and automation projects. Please reach out to discuss your specific needs.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Form submission handling
    document.getElementById('contactForm')?.addEventListener('submit', async (e) => {
      e.preventDefault()
      
      // Get form data
      const formData = new FormData(e.target as HTMLFormElement)
      const data = Object.fromEntries(formData.entries())
      
      try {
        // Here you would typically send the data to your backend
        // For now, we'll just show a success message
        alert('Thank you for your message! I will get back to you soon.')
        ;(e.target as HTMLFormElement).reset()
      } catch (error) {
        console.error('Error submitting form:', error)
        alert('There was an error sending your message. Please try again later.')
      }
    })
  </script>
</BaseLayout> 