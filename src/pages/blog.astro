---
import BaseLayout from '../layouts/BaseLayout.astro'
import { blogPosts } from '../data/blog-posts'
import { siteConfig } from '../config'

const pageTitle = `Blog | ${siteConfig.title}`
---

<BaseLayout title={pageTitle}>
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blogPosts.map(post => (
        <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg">
          <a href={`/blog/${post.id}`} class="block">
            <img 
              src={post.image} 
              alt={post.title}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <div class="flex items-center gap-4 mb-4">
                <span class="text-sm text-gray-500">{post.date}</span>
                <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 rounded-full text-sm">
                  {post.category}
                </span>
              </div>
              <h2 class="text-xl font-bold mb-2 hover:text-blue-600 dark:hover:text-blue-400">
                {post.title}
              </h2>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {post.excerpt}
              </p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">{post.readTime}</span>
                <span class="text-blue-600 dark:text-blue-400">Read more â†’</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</BaseLayout> 