---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig } from '../config';
import { projects } from '../data';
---
<BaseLayout title={`Projects | ${siteConfig.title}`}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-r from-blue-500 to-purple-600 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">My Projects</h1>
        <p class="text-xl opacity-90">
          A collection of my work in data engineering, AI, and automation. Each project demonstrates my approach to solving complex problems.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center ai-gradient">Featured Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {projects.filter(p => p.featured).map(project => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>

  <!-- All Projects -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center ai-gradient">All Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {projects.filter(p => !p.featured).map(project => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>