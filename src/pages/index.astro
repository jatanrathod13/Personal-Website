---
import Header from '../components/Header'
import HeroSection from '../components/HeroSection'
import { profileConfig, siteConfig } from '../config'
import BaseLayout from '../layouts/BaseLayout.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Jatan Rathod - Personal Website">
  <Header client:load />
  <HeroSection />
  <!-- Other content can follow here -->
</Layout>

<BaseLayout title={siteConfig.title}>
  <!-- Hero Section with Animation -->
  <section class="min-h-[90vh] flex items-center justify-center py-20 relative overflow-hidden">
    <!-- Background Gradient Animation -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-900 dark:to-gray-800 -z-10"></div>
    <div class="absolute -z-5 opacity-10 dark:opacity-20">
      <div class="blur-3xl filter absolute w-96 h-96 bg-blue-400 dark:bg-blue-600 rounded-full animate-float left-1/4 top-1/4"></div>
      <div class="blur-3xl filter absolute w-96 h-96 bg-purple-400 dark:bg-purple-600 rounded-full animate-float-delayed right-1/4 bottom-1/4"></div>
    </div>
    
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8 order-2 lg:order-1 text-center lg:text-left">
          <div>
            <p class="inline-block px-4 py-2 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 font-medium text-sm mb-6 animate-fadeIn">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 inline-block mr-1" viewBox="0 0 256 256"><path fill="currentColor" d="m80 152l16 16l16-16m-16-64v80m48-16l16 16l16-16m-16-64v80m-96-40h160M40 64v128a8 8 0 0 0 8 8h160a8 8 0 0 0 8-8V64a8 8 0 0 0-8-8H48a8 8 0 0 0-8 8Z"/></svg> Data Engineer & AI Specialist
            </p>
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
              <span class="text-gray-900 dark:text-white animate-slideUp delay-100">Hi, I'm</span>
              <br />
              <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text animate-slideUp delay-200">
                {profileConfig.name}
              </span>
            </h1>
          </div>
          <p class="text-xl text-gray-600 dark:text-gray-300 animate-slideUp delay-300 max-w-xl mx-auto lg:mx-0">
            Building high-performance data pipelines and AI solutions for Fortune 500 companies and government agencies.
          </p>
          <div class="flex gap-4 flex-wrap justify-center lg:justify-start animate-slideUp delay-400">
            <a
              href="/projects"
              class="btn btn-primary px-8 py-3 rounded-full bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-105"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 256 256"><path fill="currentColor" d="M208 88h-56V32a8 8 0 0 0-8-8H48a8 8 0 0 0-8 8v160a8 8 0 0 0 8 8h56v24a8 8 0 0 0 8 8h96a8 8 0 0 0 8-8V96a8 8 0 0 0-8-8ZM56 184V40h80v48a8 8 0 0 0 8 8h40v88Zm144 32h-80v-16h24a8 8 0 0 0 8-8V104h48Z"/></svg>
              View Projects
            </a>
            <a
              href="/about"
              class="btn px-8 py-3 rounded-full border-2 border-gray-300 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 shadow-md hover:shadow-lg transition-all transform hover:scale-105"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" viewBox="0 0 256 256"><path fill="currentColor" d="M230.92 212c-15.23-26.33-38.7-45.21-66.09-54.16a72 72 0 1 0-73.66 0c-27.39 8.94-50.86 27.82-66.09 54.16a8 8 0 1 0 13.85 8c18.84-32.56 52.14-52 89.07-52s70.23 19.44 89.07 52a8 8 0 1 0 13.85-8ZM72 96a56 56 0 1 1 56 56a56.06 56.06 0 0 1-56-56Z"/></svg>
              About Me
            </a>
          </div>
          <div class="flex gap-6 justify-center lg:justify-start animate-slideUp delay-500">
            {profileConfig.links.map(link => (
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class={`text-2xl transition-transform hover:scale-125 ${link.color} hover:text-blue-600 dark:hover:text-blue-400`}
                aria-label={link.name}
              >
                {link.name === 'GitHub' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/></svg>
                )}
                {link.name === 'LinkedIn' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24"><path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77Z"/></svg>
                )}
                {link.name === 'Twitter' && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 24 24"><path fill="currentColor" d="M22.46 6c-.77.35-1.6.58-2.46.69c.88-.53 1.56-1.37 1.88-2.38c-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29c0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15c0 1.49.75 2.81 1.91 3.56c-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07a4.28 4.28 0 0 0 4 2.98a8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21C16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56c.84-.6 1.56-1.36 2.14-2.23Z"/></svg>
                )}
              </a>
            ))}
          </div>
        </div>
        <div class="relative order-1 lg:order-2 animate-slideIn max-w-md mx-auto">
          <div class="relative z-10">
            <img
              src="/profile.jpg"
              alt={profileConfig.name}
              class="rounded-2xl shadow-2xl w-full h-auto object-cover border-4 border-white dark:border-gray-800"
            />
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-6 -right-6 w-32 h-32 bg-purple-200 dark:bg-purple-800 rounded-lg -z-1 opacity-70 animate-float"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-blue-200 dark:bg-blue-800 rounded-lg -z-1 opacity-70 animate-float-delayed"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">
          <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-transparent bg-clip-text">
            Specialized Skills
          </span>
        </h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          My expertise spans across data engineering, AI/ML, and cloud infrastructure
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {profileConfig.skills.slice(0, 6).map((skillCategory, index) => (
          <div class={`bg-gray-50 dark:bg-gray-800 p-6 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 skill-card-${index + 1}`}>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">
              {skillCategory.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skillCategory.items.map(skill => (
                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Ready to Work Together?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        I'm always open to discussing new projects, innovative ideas, and opportunities to collaborate.
      </p>
      <a 
        href="/contact" 
        class="inline-block px-8 py-4 bg-white text-blue-600 font-bold rounded-full hover:bg-gray-100 transition-colors shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all"
      >
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>

<style>
@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
  100% { transform: translateY(0px); }
}

@keyframes float-delayed {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-15px); }
  100% { transform: translateY(0px); }
}

@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

@keyframes slideUp {
  0% { opacity: 0; transform: translateY(30px); }
  100% { opacity: 1; transform: translateY(0); }
}

@keyframes slideIn {
  0% { opacity: 0; transform: translateX(30px); }
  100% { opacity: 1; transform: translateX(0); }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animate-float-delayed {
  animation: float-delayed 5s ease-in-out infinite;
  animation-delay: 1s;
}

.animate-fadeIn {
  animation: fadeIn 1s ease-out forwards;
}

.animate-slideUp {
  animation: slideUp 0.8s ease-out forwards;
  opacity: 0;
}

.animate-slideIn {
  animation: slideIn 0.8s ease-out forwards;
}

.delay-100 {
  animation-delay: 0.1s;
}

.delay-200 {
  animation-delay: 0.2s;
}

.delay-300 {
  animation-delay: 0.3s;
}

.delay-400 {
  animation-delay: 0.4s;
}

.delay-500 {
  animation-delay: 0.5s;
}

.skill-card-1 { animation-delay: 0.2s; }
.skill-card-2 { animation-delay: 0.3s; }
.skill-card-3 { animation-delay: 0.4s; }
.skill-card-4 { animation-delay: 0.5s; }
.skill-card-5 { animation-delay: 0.6s; }
.skill-card-6 { animation-delay: 0.7s; }
</style> 