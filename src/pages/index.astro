---
import BaseLayout from '../layouts/BaseLayout.astro'
import { siteConfig, profileConfig } from '../config'
---

<BaseLayout title={siteConfig.title}>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <h1 class="text-5xl md:text-6xl font-bold leading-tight">
            <span class="ai-gradient">Data Engineer</span>
            <br />
            & AI Technologist
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            {profileConfig.bio}
          </p>
          <div class="flex gap-4">
            <a
              href="/projects"
              class="btn btn-primary"
            >
              View Projects
            </a>
            <a
              href="/about"
              class="btn border border-gray-300 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400"
            >
              Learn More
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-500 rounded-2xl transform rotate-3"></div>
          <img
            src={profileConfig.avatar}
            alt={profileConfig.name}
            class="relative rounded-2xl shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
