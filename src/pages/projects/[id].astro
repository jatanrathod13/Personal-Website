---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { projects } from '../../data/projects';
import { siteConfig } from '../../config';

export async function getStaticPaths() {
  return projects.map(project => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;

// Use a different variable name for the project page title
const projectTitle = `${project.title} | Projects | ${siteConfig.title}`;

// Get related projects
const relatedProjects = projects
  .filter(p => p.id !== project.id && p.category === project.category)
  .slice(0, 3);
---

<BaseLayout title={projectTitle}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-12">
      <div class="mb-6">
        <span class="text-blue-600 dark:text-blue-400">{project.category}</span>
        <h1 class="text-4xl font-bold mt-2 mb-4">{project.title}</h1>
      </div>
      
      <img 
        src={project.image} 
        alt={project.title}
        class="w-full h-[400px] object-cover rounded-xl"
      />
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-none">
      <p>{project.description}</p>
      
      <div class="flex flex-wrap gap-2 my-4">
        {project.technologies.map(tech => (
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 rounded-full">
            {tech}
          </span>
        ))}
      </div>

      <a 
        href={project.link} 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
      >
        View Project
        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      </a>
    </div>
  </article>

  {relatedProjects.length > 0 && (
    <section class="bg-gray-50 dark:bg-gray-800 py-12">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-2xl font-bold mb-8">Related Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedProjects.map(relatedProject => (
            <a href={`/projects/${relatedProject.id}`} class="block">
              <div class="bg-white dark:bg-gray-700 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition">
                <img 
                  src={relatedProject.image} 
                  alt={relatedProject.title}
                  class="w-full h-48 object-cover"
                />
                <div class="p-4">
                  <h3 class="font-bold mb-2">{relatedProject.title}</h3>
                  <p class="text-sm text-gray-600 dark:text-gray-300">{relatedProject.description}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout> 