---
import { siteConfig } from '../config'
const currentYear = new Date().getFullYear()

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/jatanrathod', icon: 'github' },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/jatanrathod',
    icon: 'linkedin',
  },
  { name: 'Twitter', url: 'https://twitter.com/jatanrathod', icon: 'twitter' },
]
---

<footer class="footer">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold mb-4 ai-gradient">Jatan Rathod</h3>
        <p class="text-gray-600 dark:text-gray-400">Data Engineer & AI Technologist</p>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Connect</h4>
        <div class="social-links">
          {socialLinks.map(link => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400"
              aria-label={link.name}
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li>
            <a href="/projects" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
              Projects
            </a>
          </li>
          <li>
            <a href="/about" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400">
              About
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700 text-center text-gray-600 dark:text-gray-400">
      <p>&copy; {currentYear} Jatan Rathod. All rights reserved.</p>
    </div>
  </div>
</footer>