---
interface Props {
  post: {
    id: string;
    title: string;
    description: string;
    date: string;
    category: string;
    image: string;
    readTime: string;
    excerpt: string;
  }
}

const { post } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-shadow hover:shadow-xl">
  <div class="aspect-w-16 aspect-h-9 overflow-hidden">
    <img 
      src={post.image} 
      alt={post.title}
      class="w-full h-full object-cover transform transition-transform hover:scale-105"
      loading="lazy"
    />
  </div>
  <div class="p-6">
    <div class="flex items-center gap-4 mb-4">
      <span class="text-sm text-gray-500 dark:text-gray-400">{post.date}</span>
      <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 rounded-full text-sm">
        {post.category}
      </span>
      <span class="text-sm text-gray-500 dark:text-gray-400">{post.readTime}</span>
    </div>
    <h2 class="text-xl font-bold mb-2 hover:text-blue-600 dark:hover:text-blue-400">
      <a href={`/blog/${post.id}`}>{post.title}</a>
    </h2>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{post.description}</p>
    <a 
      href={`/blog/${post.id}`}
      class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline"
    >
      Read more
      <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</article> 